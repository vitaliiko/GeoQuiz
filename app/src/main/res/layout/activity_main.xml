<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.MainActivity"
    android:background="#E0E0E0"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_architectural_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:background="#ffffff"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/img_architectural"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/image1" />

        <TextView
            android:id="@+id/text_architectural_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_architectural"
            android:layout_alignTop="@+id/img_architectural"
            style="@style/HeaderFontStyle"
            android:text="Architectural monuments"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_modernBuildings_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dip"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_modern_buildings"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/image12" />

        <TextView
            android:id="@+id/text_modern_buildings_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_modern_buildings"
            android:layout_alignTop="@+id/img_modern_buildings"
            style="@style/HeaderFontStyle"
            android:text="Modern buildings"/>

    </RelativeLayout>

</LinearLayout>
